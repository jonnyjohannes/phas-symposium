<div class="instructions">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-4">
        <h3>Submissions to the PHAS Symposium 2015</h3>
        <ul>
          <li>Please include your full name, as you would want it printed in the program.</li>
          <li>A confirmation email will be sent to the email you provide.</li>
          <li>A 200 character limit for the title.</li>
          <li>A 1000 character limit for the abstract. It may include LaTeX.</li>
          <li>Please note any dietary restrictions you may have.</li>
      </div>
    </div>
  </div>
</div>
<hr/>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "bg-danger" %>
<% end %>

<div class="content-section-a">
  <div class="container">
    <div class="row">
      <%= form_for :submission, url: submissions_path, html: {class: 'form-horizontal'} do |f| %>
        <div class='form-group'>
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :email, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :title, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :abstract, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_area :abstract, class: 'form-control', placeholder: 'Abstract' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :presentation_type, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <label class="checkbox-inline">
              <%= f.radio_button(:presentation_type, "oral", checked: true) %>
              oral
            </label>
            <label class="checkbox-inline">
              <%= f.radio_button(:presentation_type, "poster") %>
              poster
            </label>
          </div>
        </div>

        <hr/>

        <div class='form-group'>
          <%= f.label :dietary_restrictions, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_area :dietary_restrictions, class: 'form-control', placeholder: 'Dietary restrictions' %>
          </div>
        </div>

        <div class='form-group'>
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
