<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <%= image_tag('ucalgary-logo.jpg', height: '200') %>
          <h1>PHAS Symposium</h1>
          <h3>November 12, 2015</h3>
          <h3>Call For Abstracts</h3>
          <hr class="intro-divder"/>
        </div>
      </div>
    </div>
  </div>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "bg-success" %>
<% end %>

<div class="content-section-a">
  <div class="container">
    <div class="row">
      <h2 class="section-title">Oral Presentations</h2>
      <% if @oral_presentations.any? %>
        <% @oral_presentations.each do |oral_presentation| %>
          <%= render 'presentation', presentation: oral_presentation %>
        <% end %>
      <% else %>
        <p>No oral presentation submissions yet.</p>
      <% end %>

      <h2 class="section-title">Poster Presentations</h2>
      <% if @poster_presentations.any? %>
        <% @poster_presentations.each do |poster_presentation| %>
          <%= render 'presentation', presentation: poster_presentation %>
        <% end %>
      <% else %>
        <p>No poster presentation submissions yet.</p>
      <% end %>
    </div>
  </div>
</div>

